                <TextBox x:Name="txtPostal" HorizontalAlignment="Left" Height="23" Margin="110,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="23" Margin="110,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="110,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                <TextBox x:Name="txtCpr" HorizontalAlignment="Left" Height="23" Margin="110,261,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
                <ComboBox x:Name="cmbCountry" HorizontalAlignment="Left" Margin="110,231,0,0" VerticalAlignment="Top" Width="200"/>
                <Image x:Name="imgPerson" HorizontalAlignment="Left" Height="286" Margin="754,10,0,0" VerticalAlignment="Top" Width="310" Stretch="None"/>
                <TextBox x:Name="txtEyeColor" HorizontalAlignment="Left" Height="23" Margin="398,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Label Content="Øjenfarve" HorizontalAlignment="Left" Margin="325,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtHairColor" HorizontalAlignment="Left" Height="23" Margin="398,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Label Content="Hårfarve" HorizontalAlignment="Left" Margin="325,40,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Height="23" Margin="398,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                <Label Content="Højde (cm)" HorizontalAlignment="Left" Margin="325,71,0,0" VerticalAlignment="Top"/>
                <Label Content="Billede" HorizontalAlignment="Left" Margin="325,102,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblPath" Content="" HorizontalAlignment="Left" Margin="398,102,0,0" VerticalAlignment="Top" Width="120"/>
