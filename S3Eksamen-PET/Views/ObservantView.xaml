                <Button x:Name="btnDeleteObservant" Content="Slet Person" HorizontalAlignment="Left" Margin="1069,83,0,0" VerticalAlignment="Top" Width="155"/>
                <Button x:Name="btnCreateObservant" Content="Opret ny person" HorizontalAlignment="Left" Margin="1069,269,0,0" VerticalAlignment="Top" Width="155"/>
                <Label Content="Kommentarer:" HorizontalAlignment="Left" Margin="326,154,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="103" Margin="331,181,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="261"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
